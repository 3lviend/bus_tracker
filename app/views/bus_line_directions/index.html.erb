<p id="notice"><%= notice %></p>

<h1>Bus Line Directions</h1>

<table>
  <thead>
    <tr>
      <th>Display name</th>
      <th>Bus route</th>
      <th>Direction name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_line_directions.each do |bus_line_direction| %>
      <tr>
        <td><%= bus_line_direction.display_name %></td>
        <td><%= bus_line_direction.bus_route %></td>
        <td><%= bus_line_direction.direction_name %></td>
        <td><%= bus_line_direction.code %></td>
        <td><%= link_to 'Show', bus_line_direction %></td>
        <td><%= link_to 'Edit', edit_bus_line_direction_path(bus_line_direction) %></td>
        <td><%= link_to 'Destroy', bus_line_direction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus Line Direction', new_bus_line_direction_path %>
