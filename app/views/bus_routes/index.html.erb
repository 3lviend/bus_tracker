<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body p-0">
    <table class="table table-hover table-middle-row m-0">
      <thead>
        <tr>
          <th width="10%" class="border-0">Rank</th>
          <th width="15%" class="border-0">Route #</th>
          <th class="border-0">Route Name</th>
        </tr>
      </thead>
      <tbody>
        <% @bus_routes.each_with_index do |bus_route, idx| %>
          <tr>
            <td class="pl-4"><%= idx + 1 %></td>
            <td><%= image_tag 'icons/bus.png', class: 'mr-3' %> <%= bus_route.code %></td>
            <td><%= bus_route.display_name %></td>
            <!-- <td><%#= link_to 'Show', bus_route %></td> -->
            <!-- <td><%#= link_to 'Edit', edit_bus_route_path(bus_route) %></td> -->
            <!-- <td><%#= link_to 'Destroy', bus_route, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

