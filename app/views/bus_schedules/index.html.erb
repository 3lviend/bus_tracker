<p id="notice"><%= notice %></p>

<h1>Bus Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Bus stop</th>
      <th>Time</th>
      <th>Bus route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_schedules.each do |bus_schedule| %>
      <tr>
        <td><%= bus_schedule.day %></td>
        <td><%= bus_schedule.bus_stop %></td>
        <td><%= bus_schedule.time %></td>
        <td><%= bus_schedule.bus_route %></td>
        <td><%= link_to 'Show', bus_schedule %></td>
        <td><%= link_to 'Edit', edit_bus_schedule_path(bus_schedule) %></td>
        <td><%= link_to 'Destroy', bus_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus Schedule', new_bus_schedule_path %>
